<p id="notice"><%= notice %></p>

<h1>СПИСOK Маршрутов</h1>

<table>
  <thead>
    <tr>
      <th>Маршруты</th>
    </tr>
  </thead>


  <tbody>
    <% @routes.each do |route| %>
      <tr>
       <td><%= route.name %></td>
       <td><%= link_to 'Показать', route%></td>
       <td><%= link_to 'Редактировать', edit_route_path(route) %></td>
       <td><%= link_to 'Удалить', route, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
       <br>
      </tr>
    <% end %>
  </tbody>
  

</table>

<br>

<%= link_to 'Добавить новый маршрут', new_route_path %>